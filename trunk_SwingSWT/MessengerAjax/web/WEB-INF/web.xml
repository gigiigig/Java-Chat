<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>SocketConnectionServlet</servlet-name>
        <servlet-class>chatclient.servlet.SocketConnectionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SessionReaderServlet</servlet-name>
        <servlet-class>chatclient.servlet.SessionReaderServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MessageSender</servlet-name>
        <servlet-class>chatclient.servlet.MessageSenderServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DisconnectServlet</servlet-name>
        <servlet-class>chatclient.servlet.DisconnectServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SocketConnectionServlet</servlet-name>
        <url-pattern>/SocketConnection</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SessionReaderServlet</servlet-name>
        <url-pattern>/SessionReader</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MessageSender</servlet-name>
        <url-pattern>/MessageSender</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DisconnectServlet</servlet-name>
        <url-pattern>/Disconnect</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
        </welcome-file-list>
    </web-app>
